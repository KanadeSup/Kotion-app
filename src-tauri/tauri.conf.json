{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Kote",
  "version": "0.1.0",
  "identifier": "com.kotion.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5123",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn generate"
  },
  "app": {
    "windows": [
      {
        "title": "kote",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
